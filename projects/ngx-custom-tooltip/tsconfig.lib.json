{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "ES2015",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "ES2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "skipTemplateCodegen": false,
    "flatModuleOutFile": "ngx-custom-tooltip.js",
    "flatModuleId": "ngx-custom-tooltip"
  },
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
