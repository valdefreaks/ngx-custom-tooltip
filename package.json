{
  "name": "ngx-custom-tooltip-workspace",
  "scripts": {
    "build:lib": "ng build ngx-custom-tooltip --configuration production",
    "pack:lib": "cd dist/ngx-custom-tooltip && npm pack",
    "test": "ng test ngx-custom-tooltip",
    "start": "ng serve demo-app",
    "lint": "eslint . --ext .ts,.html",
    "lint:fix": "eslint . --ext .ts,.html --fix",
    "publish:lib": "npm run build:lib && cd dist/ngx-custom-tooltip && npm publish",
    "format": "prettier --write .",
    "lint:css": "stylelint \"**/*.css\" --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@angular/common": "^12.2.17",
    "@angular/compiler": "^12.2.17",
    "@angular/core": "^12.2.17",
    "@angular/platform-browser": "^12.2.17",
    "@angular/platform-browser-dynamic": "^12.2.17",
    "rxjs": "^6.5.3",
    "tslib": "^2.8.1",
    "zone.js": "^0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.18",
    "@angular-eslint/eslint-plugin": "^1.2.0",
    "@angular-eslint/eslint-plugin-template": "^1.2.0",
    "@angular-eslint/template-parser": "^1.2.0",
    "@angular/cli": "~12.2.18",
    "@angular/compiler-cli": "~12.2.17",
    "@types/node": "18.7.14",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.9.7",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "ng-packagr": "^12.2.7",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-alphabetical-order": "^1.0.0",
    "stylelint-config-standard": "^39.0.1",
    "ts-node": "^8.3.0",
    "typescript": "~4.3.5"
  }
}
