{
  "name": "ngx-custom-tooltip-workspace",
  "scripts": {
    "build:lib": "ng build ngx-custom-tooltip --configuration production",
    "pack:lib": "cd dist/ngx-custom-tooltip && npm pack",
    "test": "ng test ngx-custom-tooltip",
    "start": "ng serve demo-app",
    "lint": "eslint . --ext .ts,.html",
    "lint:fix": "eslint . --ext .ts,.html --fix",
    "publish:lib": "npm run build:lib && cd dist/ngx-custom-tooltip && npm publish",
    "format": "prettier --write .",
    "lint:css": "stylelint \"**/*.css\" --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@angular/common": "^14.3.0",
    "@angular/compiler": "^14.3.0",
    "@angular/core": "^14.3.0",
    "@angular/platform-browser": "^14.3.0",
    "@angular/platform-browser-dynamic": "^14.3.0",
    "rxjs": "^7.4.0",
    "tslib": "^2.8.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.13",
    "@angular-eslint/eslint-plugin": "^13.5.0",
    "@angular-eslint/eslint-plugin-template": "^13.5.0",
    "@angular-eslint/template-parser": "^13.5.0",
    "@angular/cli": "^14.2.13",
    "@angular/compiler-cli": "^14.3.0",
    "@types/eslint": "^8.56.12",
    "@types/node": "18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "ng-packagr": "^14.2.2",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-alphabetical-order": "^1.0.0",
    "stylelint-config-standard": "^39.0.1",
    "ts-node": "^8.3.0",
    "typescript": "~4.8.4"
  }
}
